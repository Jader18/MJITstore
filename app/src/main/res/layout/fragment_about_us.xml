<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutUsFragment"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#FCFCFC"
    android:padding="16dp">

    <!-- Botón Volver -->
    <Button
        android:id="@+id/bBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/btn_ripple"
        android:padding="10dp"
        android:text="Volver"
        android:textSize="12sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#4CAF50" />

    <!-- Logotipo -->
    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/logostore"
        android:contentDescription="Logo de MJITStore" />

    <!-- Título -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Acerca de Nosotros"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#212121"
        android:paddingBottom="20dp" />

    <!-- ScrollView para el desplazamiento -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp">

        <!-- Contenedor de información -->
        <LinearLayout
            android:id="@+id/infoContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_background"
            android:padding="20dp"
            android:elevation="4dp">

            <TextView
                android:id="@+id/tvMembers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Integrantes:\nMathius Zamora\nJader Mendoza"
                android:textSize="18sp"
                android:textColor="#424242"
                android:lineSpacingExtra="4dp"
                android:paddingBottom="16dp" />

            <TextView
                android:id="@+id/tvCareer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Carrera:\nIngeniería en Sistemas"
                android:textSize="18sp"
                android:textColor="#424242"
                android:lineSpacingExtra="4dp"
                android:paddingBottom="16dp" />

            <TextView
                android:id="@+id/tvAppName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre de la aplicación:\nMJITStore"
                android:textSize="18sp"
                android:textColor="#424242"
                android:lineSpacingExtra="4dp"
                android:paddingBottom="16dp" />

            <TextView
                android:id="@+id/tvPurpose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Propósito:\nMJITStore es una catalogo virtual que muestra los productos disponibles de la tienda online MJITStore"
                android:textSize="18sp"
                android:textColor="#424242"
                android:lineSpacingExtra="4dp"
                android:paddingBottom="16dp" />

            <TextView
                android:id="@+id/tvSkills"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tecnologías:\nDesarrollada con Kotlin y ViewBinding en Android Studio."
                android:textSize="18sp"
                android:textColor="#424242"
                android:lineSpacingExtra="4dp"
                android:paddingBottom="16dp" />

            <TextView
                android:id="@+id/tvCreationDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha de creación:\n02/04/2025 - Versión 1.0"
                android:textSize="18sp"
                android:textColor="#424242"
                android:lineSpacingExtra="4dp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>